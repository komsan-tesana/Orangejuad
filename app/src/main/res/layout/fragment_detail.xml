<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5E2D4"
    android:dividerPadding="10sp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".detail">


    <TextView
        android:id="@+id/titleView"
        android:layout_width="208dp"
        android:layout_height="90dp"
        android:fontFamily="monospace"
        android:gravity="bottom|center"
        android:textColor="#151313"
        android:text="titleView"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/scienceView"
        android:layout_width="210dp"
        android:layout_height="29dp"
        android:textColor="#151313"
        android:gravity="center|top"
        android:text="scienceView" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView"
        android:layout_width="217dp"
        android:layout_height="193dp"
        app:layout_constraintVertical_bias="0.10" />

    <TextView
        android:id="@+id/descriptionView"
        android:textColor="#151313"
        android:layout_width="372dp"
        android:layout_height="169dp"
        android:layout_marginTop="10sp"
        android:fontFamily="monospace"
        android:text="descriptionView"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_weight="0"
            android:textColor="#151313"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="ประโยชน์ :"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/benefitView"
            android:layout_width="269dp"
            android:layout_height="125dp"
            android:textColor="#151313"
            android:layout_weight="1"
            android:fontFamily="monospace"
            android:text="benefitView"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>
